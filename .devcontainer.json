{
  "image": "mcr.microsoft.com/vscode/devcontainers/python:0-3.10-bullseye",
  "name": "alarmdotcom",
  "forwardPorts": [8123],
  "features": {
    "github-cli": "latest"
  },
  "containerEnv": {
    "WORKSPACE_DIRECTORY": "/workspaces/alarmdotcom",
    "INTEGRATION_NAME": "alarmdotcom",
    "LIBRARY_NAME": "pyalarmdotcomajax",
    "LIBRARY_GIT_URL": "https://github.com/pyalarmdotcom/pyalarmdotcomajax.git"
  },
  "postCreateCommand": "scripts/setup.sh",
  "customizations": {
    "codespaces": {
      "repositories": {
        "pyalarmdotcom/pyalarmdotcomajax": {
          "permissions": "write-all"
        }
      }
    },
    "vscode": {
      "extensions": [
        "ryanluker.vscode-coverage-gutters",
        "bungcip.better-toml",
        "donjayamanne.python-extension-pack",
        "marklarah.pre-commit-vscode",
        "eamodio.gitlens",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "esbenp.prettier-vscode",
        "EditorConfig.EditorConfig"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/bash"
          }
        },
        "python.analysis.autoSearchPaths": false,
        "python.linting.enabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnPaste": false,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "python.linting.mypyEnabled": true,
        "python.defaultInterpreterPath": "/usr/local/python/bin/python",
        "python.formatting.blackPath": "/usr/local/python/bin/black",
        "python.linting.ruff.path": ["/usr/local/python/bin/ruff"],
        "python.linting.mypyPath": "/usr/local/python/bin/mypy",
        "python.pythonPath": "/usr/local/python/bin/python"
      }
    }
  }
}
